<style>
  header {
    height: 45vh;
    margin-top: 15px !important;
    display: flex;
    flex-direction: row;
    width: 90%;
    background: rgb(15, 15, 15);
    background: linear-gradient(45deg, rgba(15, 15, 15, 1) 0%, #252525 100%);
    align-items: center;
    border-radius: 15px;
    border: #252525 1px solid;
  }

  header div.left ul.welcomerows li.row ul.socials {
    margin-block: 20px !important;
    display: flex;
  }

  header div.left ul.welcomerows li.row h2.title {
    font-size: 3.5em;
    font-weight: 500;
  }

  header div.left ul.welcomerows li.row ul.socials li.social {
    margin-inline-end: 10px !important;
  }

  @media only screen and (max-width: 600px) {
    /* Celular */
    header {
      padding: 20px !important;
    }

    header div.right{
      display:none !important;
    }

    header div.left ul.welcomerows li.row h3.subtitle {
      font-size: 1.8em;
      font-weight: 400;
    }
  }
  @media only screen and (min-width: 601px) {
    /* PC */
    header {
      justify-content: space-around;
    }

    header div.left,
    header div.right {
      width: 40%;
    }

    header div.left ul.welcomerows li.row h3.subtitle {
      font-size: 1.5em;
      font-weight: 400;
    }

    header div.right div.code code {
      height: 35vh;
      border-radius: 10px;
      border: #3b3b3b 1px solid;
      padding: 10px !important;
      font-size: 15px;
    }

    header div.right div.code p {
      padding-top: 10px !important;
      font-size: 12px;
      text-align: end;
    }
  }
</style>
