---
interface Props {
  url: string,
  img: string,
  name: string,
}

const { url, img, name } = Astro.props
---
<article class="skill">
  <div class="skillcontent" title={name}>
    <a href={url} target="_blank">
      <img src={img} alt={name}>
    </a>
  </article>
</article>

<style>
  div.skillcontent{
    background: rgb(15,15,15);
    background: linear-gradient(45deg, rgba(15,15,15,1) 0%, #252525 100%);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 15vh;
    height: 15vh;
    border-radius: 15px;
    border: #252525 1px solid;
    padding: 10px !important;
    margin: 10px !important;
  }

  article.skill div.skillcontent a img{
    width: 100%;
  }
</style>