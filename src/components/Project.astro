---
interface Props {
  image: string;
  name: string;
  description: string;
  url: string;
}

const { image, name, description, url } = Astro.props;
---

<article class='project' style={`background-image:url('${image}');`}>
  <a href={url} target='_blank'>
    <!-- <div class="bottom">
        <img src={image} alt={description}>
      </div> -->
    <div class='top'>
      <div class='title'>
        <svg
          xmlns='http://www.w3.org/2000/svg'
          width='30'
          height='30'
          viewBox='0 0 24 24'
          fill='none'
          stroke='currentColor'
          stroke-width='2'
          stroke-linecap='round'
          stroke-linejoin='round'
          class='icon icon-tabler icons-tabler-outline icon-tabler-brand-github'
          ><path stroke='none' d='M0 0h24v24H0z' fill='none'></path><path
            d='M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5'
          ></path></svg
        >
        <h4>{name}</h4>
      </div>
      <div class='description'>
        <p>{description}</p>
      </div>
    </div>
  </a>
</article>
<style>
  article.project:hover a {
    backdrop-filter: blur(0px);
  }

  a {
    text-decoration: none;
    background-color: rgba(0, 0, 0, 0.631);
    height: 100%;
    display: flex;
    flex-direction: column;
    border-radius: 15px;
    border: #252525 1px solid;
    backdrop-filter: blur(2px);
    justify-content: end;
    transition: 0.5s ease-out;
  }

  article.project {
    height: 38vh;
      /* background: rgb(15,15,15);
    background: linear-gradient(45deg, rgba(15,15,15,1) 0%, #252525 100%); */
    border-radius: 15px;
    display: flex;
    flex-direction: column;
    justify-content: end;
  }

  article.project div.top {
    background: rgb(15, 15, 15);
    background: linear-gradient(45deg, rgba(15, 15, 15, 1) 0%, #252525 100%);
    padding: 21px !important;
    border-radius: 15px;
    border: #252525 1px solid;
  }

  article.project div.top div.title {
    display: flex;
    justify-content: start;
    align-items: center;
    padding-block: 10px !important;
  }

  @media only screen and (max-width: 600px) {
    /* Celular */
    article.project {
      width: 100%;
      margin-block-end: 20px !important;
    }
  }
  @media only screen and (min-width: 601px) {
    /* PC */
    article.project {
      width: 33%;
    }
  }
</style>
